{
  "manifest_version": 2,
  "name": "tab2desktop",
  "version": "0.0.2",
  "description": "Chrome extension for opening tabs on your desktop pc from your chrome mobile browser",
  "minimum_chrome_version": "23.0",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "tabs",
    "bookmarks",
    "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://cdnjs.cloudflare.com/; object-src 'self'"
}
